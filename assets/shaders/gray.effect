CCEffect %{
  techniques:
  - passes:
    - vert: vs
      frag: fs
      blendState:
        targets:
        - blend: true
      rasterizerState:
        cullMode: none
      properties:
        texture: { value: white }
        alphaThreshold: { value: 0.5 }
}%


CCProgram vs %{
  precision highp float;

  #include <cc-global>
  #include <cc-local>

  in vec3 a_position;
  in vec4 a_color;
  out vec4 v_color;

  #if USE_TEXTURE
  in vec2 a_uv0;
  out vec2 v_uv0;
  #endif

  void main () {
    vec4 pos = vec4(a_position, 1);

    #if CC_USE_MODEL
    pos = cc_matViewProj * cc_matWorld * pos;
    #else
    pos = cc_matViewProj * pos;
    #endif

    #if USE_TEXTURE
    v_uv0 = a_uv0;
    #endif

    v_color = a_color;

    gl_Position = pos;
  }
}%


CCProgram fs %{
  precision highp float;

  #include <alpha-test>
  #include <texture>

  in vec4 v_color;

  #if USE_TEXTURE
  in vec2 v_uv0;
  uniform sampler2D texture;
  #endif

  // ğŸ”¹ ä½¿ç”¨ Uniform Block å®£å‘Šé Sampler2D è®Šæ•¸
  // #if USE_GRAY
  uniform MyEffectUBO {
   float grayEffect = 1.0; // 0.0 = å½©è‰², 1.0 = é»‘ç™½
  };
  // #endif

  void main () {
    vec4 o = vec4(1, 1, 1, 1);
    #if USE_TEXTURE
      CCTexture(texture, v_uv0, o);
    #endif

    // è½‰æ›ç‚ºç°éš
    float gray = dot(o.rgb, vec3(0.3, 0.59, 0.11));
    vec3 grayColor = vec3(gray);
    
    // ä½¿ç”¨ grayEffect ä¾†æ§åˆ¶ç°éšå¼·åº¦
    o.rgb = mix(o.rgb, grayColor, grayEffect);

    o *= v_color;

    ALPHA_TEST(o);

    #if USE_BGRA
      gl_FragColor = o.bgra;
    #else
      gl_FragColor = o.rgba;
    #endif
  }
}%
